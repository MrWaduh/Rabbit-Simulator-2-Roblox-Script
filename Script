local OrionLib = loadstring(game:HttpGet(('https://pastebin.com/raw/WRUyYTdY')))()

local Window = OrionLib:MakeWindow({Name = "Rabbit Simulator 2 Script", HidePremium = false, SaveConfig = true, ConfigFolder = "OrionTest"})

local Tab = Window:MakeTab({
    Name = "Main",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

Tab:AddSection({
    Name = "Created by Mr_Waduh"
})

-- Auto Carrot
Tab:AddToggle({
    Name = "Auto carrot",
    Default = false,
    Callback = function(Value)
        Carrot = Value
        while Carrot do
            task.wait()
            local player = game.Players.LocalPlayer
            local character = player.Character or player.CharacterAdded:Wait()
            local backpack = player:WaitForChild("Backpack")
            local toolName = "Carrot"

            local tool = backpack:FindFirstChild(toolName)
            if tool then
                tool.Parent = character
                print(toolName .. " equipped!")
            end

            -- Perform carrot action
            if character:FindFirstChild(toolName) then
                character[toolName].E:FireServer()
            end
        end
    end
})

-- Auto Fight
Tab:AddToggle({
    Name = "Auto attack",
    Default = false,
    Callback = function(Value)
        Fight = Value
        while Fight do
            task.wait()
            local player = game.Players.LocalPlayer
            local character = player.Character or player.CharacterAdded:Wait()
            local backpack = player:WaitForChild("Backpack")
            local toolName = "Fight"

            local tool = backpack:FindFirstChild(toolName)
            if tool then
                tool.Parent = character
                print(toolName .. " equipped!")
            end

            -- Perform fight action
            if character:FindFirstChild(toolName) then
                character[toolName].E:FireServer()
            end
        end
    end
})

-- Auto Rebirth
Tab:AddToggle({
    Name = "Auto rebirth",
    Default = false,
    Callback = function(Value)
        Rebirth = Value
        while Rebirth do
            task.wait()
            game:GetService("ReplicatedStorage").RebirthMe:FireServer()
        end
    end
})

-- Auto Reset Size
Tab:AddToggle({
    Name = "Auto reset size",
    Default = false,
    Callback = function(Value)
        Reset = Value
        while Reset do
            task.wait()
            game:GetService("ReplicatedStorage").ResetSize:FireServer()
        end
    end
})

local TabTp = Window:MakeTab({
    Name = "Teleport",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

TabTp:AddButton({
    Name = "Tp to Block",
    Callback = function()
        local rootPart = game.Players.LocalPlayer.Character.HumanoidRootPart
        local block = workspace:FindFirstChild("Block") and workspace.Block:FindFirstChild("Base")
        if block then
            rootPart.CFrame = block.CFrame
        else
            print("Block not found!")
        end
    end
})

TabTp:AddButton({
    Name = "Tp to Sky Carrot",
    Callback = function()
        local rootPart = game.Players.LocalPlayer.Character.HumanoidRootPart
        local target = workspace:FindFirstChild("Sky Carrot Quest") and workspace["Sky Carrot Quest"]:FindFirstChild("ClaimSkyCarrot")
        if target then
            rootPart.CFrame = target.CFrame
        else
            print("Sky Carrot Quest not found!")
        end
    end
})

OrionLib:Init()
